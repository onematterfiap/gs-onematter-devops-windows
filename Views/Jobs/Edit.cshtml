@model OneMatter.Models.ViewModels.CreateJobViewModel

@{
    ViewData["Title"] = "Editar Vaga";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        @* O formulário agora aponta para a ação "Edit" *@
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Este campo 'hidden' (oculto) é crucial. 
               Ele guarda o ID da vaga que estamos a editar, mas o utilizador não o vê.
               Sem ele, o POST não saberá qual vaga atualizar.
            *@
            @* (Não precisamos de um campo de ID no ViewModel, 
               porque o ID é passado pela rota/URL) *@

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}